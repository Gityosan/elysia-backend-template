{
  "name": "elysia-backend-template",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/index.ts",
    "dev": "bun run --watch src/index.ts",
    "studio": "drizzle-kit studio --host=0.0.0.0 --port=3010 --config drizzle.config.ts",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "migrate": "drizzle-kit generate:mysql --schema=./src/models/userSchema.ts",
    "migrate:run": "bun run src/config/runMigrations.ts",
    "lint": "biome lint .",
    "format": "biome format . --write",
    "check": "biome check --apply ."
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/swagger": "^1.1.1",
    "drizzle-orm": "^0.33.0",
    "drizzle-zod": "^0.5.1",
    "elysia": "^1.1.12",
    "mysql2": "^3.11.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "bun-types": "^1.1.27",
    "drizzle-kit": "^0.24.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
